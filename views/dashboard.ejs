<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard - Husn Hira</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      background: #f9f9f9;
      overflow-x: hidden;
    }

    header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: #ff6b8b;
      padding: 1rem 2rem;
      position: relative;
    }

    .brand {
      display: flex;
      align-items: center;
    }

    .brand img {
      width: 45px;
      height: 45px;
      object-fit: cover;
      border-radius: 50%;
      margin-right: 0.8rem;
      box-shadow: 0 0 5px rgba(0,0,0,0.2);
    }

    .brand h1 {
      font-size: 1.4rem;
      color: white;
    }

    nav {
      display: flex;
      gap: 1rem;
    }

    nav a {
      color: white;
      background: rgba(255,255,255,0.2);
      padding: 0.5rem 1rem;
      border-radius: 5px;
      text-decoration: none;
      font-weight: 600;
      display: flex;
      align-items: center;
      transition: 0.3s ease;
    }

    nav a i {
      margin-right: 0.5rem;
    }

    nav a:hover, nav a.active {
      background: white;
      color: #ff6b8b;
    }

    .logout-btn {
      background: #fff;
      color: #ff6b8b;
      border: 1px solid #fff;
      padding: 0.5rem 1rem;
      border-radius: 5px;
      cursor: pointer;
      font-weight: 600;
    }

    .container {
      padding: 2rem;
    }

    .search-form {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .search-form input,
    .search-form button {
      padding: 0.6rem;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 1rem;
    }

    .search-form button {
      background: #ff6b8b;
      color: white;
      border: none;
      transition: 0.3s;
    }

    .search-form button:hover {
      background: #e65576;
    }

    .clear-history-btn {
      background: #f44336;
      color: white;
      padding: 0.6rem 1.2rem;
      border: none;
      border-radius: 5px;
      font-weight: 600;
      cursor: pointer;
      margin-bottom: 1.5rem;
    }

    .card {
      background: white;
      padding: 1.5rem;
      margin-bottom: 1rem;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      transition: 0.3s ease;
    }

    .card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .card h3 {
      margin-top: 0;
    }

    .info {
      margin: 0.3rem 0;
    }

    .btns button {
      margin-right: 10px;
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      color: white;
      font-weight: bold;
    }

    .cancel {
      background: #f44336;
    }

    .deliver {
      background: #4caf50;
    }

    .menu-toggle {
      display: none;
      font-size: 1.5rem;
      color: white;
      background: none;
      border: none;
    }

    .mobile-nav {
      display: none;
      flex-direction: column;
      position: fixed;
      top: 0;
      left: -100%;
      width: 70%;
      height: 100vh;
      background: #ff6b8b;
      padding: 2rem;
      transition: left 0.3s ease;
      z-index: 1000;
    }

    .mobile-nav.active {
      left: 0;
    }

    .mobile-nav .close-btn {
      align-self: flex-end;
      font-size: 1.5rem;
      color: white;
      background: none;
      border: none;
      margin-bottom: 2rem;
    }

    .mobile-nav a {
      margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
      nav {
        display: none;
      }

      .menu-toggle {
        display: block;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="brand">
      <img src="/Assets/logo.png" alt="Husn Hira Logo">
      <h1>Husn Hira Admin</h1>
    </div>
    <button class="menu-toggle" onclick="document.querySelector('.mobile-nav').classList.add('active')">
      <i class="fas fa-bars"></i>
    </button>
    <nav>
      <a href="/admin-portal-1024/dashboard" class="<%= currentTab === 'pending' ? 'active' : '' %>"><i class="fas fa-box"></i> New Orders</a>
      <a href="/admin-portal-1024/delivering" class="<%= currentTab === 'delivering' ? 'active' : '' %>"><i class="fas fa-truck"></i> Delivering</a>
      <a href="/admin-portal-1024/history" class="<%= currentTab === 'done' ? 'active' : '' %>"><i class="fas fa-clock"></i> History</a>
      <form action="/admin-portal-1024/logout" method="GET">
        <button type="submit" class="logout-btn">Logout</button>
      </form>
    </nav>
  </header>

  <div class="mobile-nav">
    <button class="close-btn" onclick="document.querySelector('.mobile-nav').classList.remove('active')"><i class="fas fa-times"></i></button>
    <a href="/admin-portal-1024/dashboard"><i class="fas fa-box"></i> New Orders</a>
    <a href="/admin-portal-1024/delivering"><i class="fas fa-truck"></i> Delivering</a>
    <a href="/admin-portal-1024/history"><i class="fas fa-clock"></i> History</a>
    <form action="/admin-portal-1024/logout" method="GET">
      <button type="submit" class="logout-btn">Logout</button>
    </form>
  </div>

  <div class="container">
   <!-- EJS card rendering logic starts here -->
<form method="GET" action="" class="search-form">
  <input type="text" name="search" placeholder="Search by name, mobile, or order ID" value="<%= typeof search !== 'undefined' ? search : '' %>" />
  <input type="date" name="date" value="<%= typeof selectedDate !== 'undefined' ? selectedDate : '' %>" />
  <button type="submit">Search/Filter</button>
</form>

<% if (currentTab === 'done') { %>
  <form method="POST" action="/admin-portal-1024/clear-history" onsubmit="return confirm('Clear all history?')">
    <button type="submit" class="clear-history-btn">Clear Database</button>
  </form>
<% } %>

<% if (orders.length === 0) { %>
  <p>No orders found.</p>
<% } else { %>
  <% orders.forEach(order => { %>
    <div class="card">
      <h3><%= order.name %></h3>
      <p class="info"><strong>Address:</strong> <%= order.address %></p>
      <p class="info"><strong>Mobile:</strong> <%= order.mobile_number %></p>
      <% if (order.alternate_number) { %>
        <p class="info"><strong>Alt Number:</strong> <%= order.alternate_number %></p>
      <% } %>
      <p class="info"><strong>Order ID:</strong> <%= order.order_id %></p>
      <p class="info"><strong>Txn ID:</strong> <%= order.payment_id %></p>
      <p class="info"><strong>Coupon:</strong> <%= order.coupon || 'None' %></p>
      <p class="info"><strong>Ordered On:</strong> <%= order.date.toLocaleString('en-IN', { dateStyle: 'medium', timeStyle: 'short' }) %></p>

      <div class="btns">
        <% if (currentTab === 'pending') { %>
          <form method="POST" action="/admin-portal-1024/cancel/<%= order._id %>" onsubmit="return confirm('Cancel this order?')" style="display:inline;">
            <button type="submit" class="cancel">Cancel</button>
          </form>
          <form method="POST" action="/admin-portal-1024/deliver/<%= order._id %>" onsubmit="return confirm('Mark as delivering?')" style="display:inline;">
            <button type="submit" class="deliver">Deliver</button>
          </form>
        <% } else if (currentTab === 'delivering') { %>
          <form method="POST" action="/admin-portal-1024/cancel/<%= order._id %>" onsubmit="return confirm('Cancel this delivery?')" style="display:inline;">
            <button type="submit" class="cancel">Cancel</button>
          </form>
          <form method="POST" action="/admin-portal-1024/done/<%= order._id %>" onsubmit="return confirm('Mark as done?')" style="display:inline;">
            <button type="submit" class="deliver">Done</button>
          </form>
        <% } else if (currentTab === 'done') { %>
          <form method="POST" action="/admin-portal-1024/delete/<%= order._id %>" onsubmit="return confirm('Delete this record?')" style="display:inline;">
            <button type="submit" class="cancel">Delete</button>
          </form>
        <% } %>
      </div>
    </div>
  <% }) %>
<% } %>

  </div>

 <script>
  const successMessage = "<%= typeof successMessage !== 'undefined' ? successMessage : '' %>";
  const errorMessage = "<%= typeof errorMessage !== 'undefined' ? errorMessage : '' %>";

   const mobileNav = document.querySelector('.mobile-nav');
  const links = document.querySelectorAll('.mobile-nav a');

  links.forEach(link => {
    link.addEventListener('click', () => {
      mobileNav.classList.remove('active');
    });
  });

  if (successMessage) {
    Swal.fire({
      icon: 'success',
      title: 'Success!',
      text: successMessage,
      confirmButtonColor: '#ff6b8b'
    });
  }

  if (errorMessage) {
    Swal.fire({
      icon: 'error',
      title: 'Oops!',
      text: errorMessage,
      confirmButtonColor: '#f44336'
    });
  }
</script>

</body>
</html>
